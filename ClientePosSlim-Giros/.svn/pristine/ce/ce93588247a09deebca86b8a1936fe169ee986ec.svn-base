package co.com.codesa.clienteposslimgiros.interfaces.componentesGUI;

public interface PropiedadesCombo{
	
	/**
	 * ********************************************************************
	 * @method 	cargarCombo
	 * 		   	Metodo encargado de ser utilidad para cargar el listado de 
	 * 			valores sobre un combo
	 * @param	pArrObjLista
	 * 			arreglo de objetos para representar cualqiuer tipo de dato 
  	 * 		  	que se requiera cargar sobre el componente, corresponde a 
  	 * 		  	la informacion que se cargara
	 * @param 	pObjBooIncluyeSeleccionarSinObservacion
	 * 			Bandera que permite considerar sobre el cargue, el valor 
  	 * 		  	especial que indica que no se ha producido ninguna seleccion
  	 * 		  	(valor: --SELECCIONAR-- o --SIN OBSERVACION--)
	 * @throws 	Exception
	 * 			Controla, recupera y escala, cualquier tipo de excepcion 
	 * 		   	presentada 
	 * @author 	hector.cuenca
	 * @date   	11/01/2017
	 * *********************************************************************
	 */
	public	void	cargarCombo	(	Object 	pArrObjLista[],
									Boolean pObjBooIncluyeSeleccionarSinObservacion
								)	throws	Exception;
	
	/**
  	 * ****************************************************************.
  	 * @metodo cargarCombo
  	 * 		   Metodo encargado de ser utilidad para cargar el listado 
  	 * 		   de valores sobre un combo
  	 * @param pArrObjLista
  	 * 		  arreglo de objetos para representar cualqiuer tipo de dato 
  	 * 		  que se requiera cargar sobre el componente, corresponde a 
  	 * 		  la informacion que se cargara
  	 * @param pObjBooIncluyeSeleccionarSinObservacion 
  	 * 		  bandera que permite considerar sobre el cargue el valor 
  	 * 		  especial que indica que no se ha producido ninguna seleccion
  	 * 		  (valor: --SELECCIONAR--)
  	 * @param pObjValorInicial
  	 * 		  posible valor inicial del item que en primera instancia debe
  	 * 		  aparecer seleccionado
  	 * @throws Exception 
	 * 		   Controla, recupera y escala, cualquier tipo de excepcion 
	 * 		   presentada 
  	 * @autor Hector Q-en-K
  	 * ****************************************************************
  	 */
	public void cargarCombo(Object pArrObjLista[],
						    Boolean pObjBooIncluyeSeleccionarSinObservacion,
						    Object pObjValorInicial)throws Exception;
	
	/**
  	 * ****************************************************************.
  	 * @metodo removerListaCombo
  	 * 		   Metodo encargado de ser utilidad para limpiar los valores
  	 * 		   de un componente JComboBox
  	 * @param pObjBooIncluyeSeleccionarSinObservacion 
  	 * 		  bandera que permite considerar el cargue el valor 
  	 * 		  especial que indica que no se ha producido ninguna seleccion
  	 * 		  (valor: --SELECCIONAR--)
  	 * @throws Exception 
	 * 		   Controla, recupera y escala, cualquier tipo de excepcion 
	 * 		   presentada 
  	 * @autor Roberth Martinez Vargas
  	 * ****************************************************************
  	 */
	public void removerListaCombo(Boolean pObjBooIncluyeSeleccionarSinObservacion)throws Exception;
	
	/**
  	 * ****************************************************************.
  	 * @metodo 	restablecer
  	 * 		   	Metodo encargado de ser utilidad para devolver el item
  	 * 			seleccionado a su valor inicial
  	 * @throws 	Exception 
	 * 		   	Controla, recupera y escala, cualquier tipo de excepcion 
	 * 		   	presentada 
  	 * @autor 	Roberth Martinez Vargas
  	 * ****************************************************************
  	 */
	public void restablecer()throws Exception;
}
